<%- include ../__header.ejs %>

<h2 class="blog-post-title">Your friends</h2>

<form action="/people/show" id="form">
  <input type="text" name="id" placeholder="Search by id"></input>
  <input type="submit"></input>
</form>

<table class="table table-hover">
  <ul>
    <% everyone.forEach(function(person) { %>
      <tr>
        <td>
	        <li><a class="allpeople" href="/people/show/?id=<%= person.id %>"><%= person.id %>
	        <%= person.firstname %> <%= person.lastname %></a>

	        <form class="delete" method="post" action="/people/<%= person.id %>?_method=delete"><button>Delete</button></form></li>
        </td>
      </tr>
    <% }) %>
  </ul>
</table>

<%- include ../__footer.ejs %>
